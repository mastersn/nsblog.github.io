---
const conicGradients = Array(30)
  .fill("")
  .map((v, index) => `hsl(${index * 12}, 100%, 50%)`)
  .join(", ")
---

<div class="container">
  <div class="wheel" style={`background: conic-gradient(${conicGradients})`}></div>
</div>

<style>
  .container {
    margin: auto;
    padding: 1rem;
    aspect-ratio: 1 / 1;
    max-height: 33vh;
  }
	.wheel {
    border-radius: 100%;
    height: 100%;
  }
</style>